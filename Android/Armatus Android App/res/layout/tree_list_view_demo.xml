<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:treeView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:scrollbars="vertical"
        android:visibility="gone" /> <!-- Just to test some attributes in IDE -->

    <pl.polidea.treeview.TreeListView
        android:id="@+id/mainTreeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:smoothScrollbar="true"
        treeView:indicator_gravity="right|center_vertical"
        treeView:src_collapsed="?attr/expanderClose"
        treeView:src_expanded="?attr/expanderOpen" />

</LinearLayout>