<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/consoleBackgroundColor" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/console_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Launch console"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/code_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/console_button"
            android:paddingLeft="5dp"
            android:textColor="?attr/codeColor"
            tools:context=".MainActivity" />

        <edu.kufpg.armatus.util.StickyButton
            android:id="@+id/lock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/code_text_view"
            android:text="Do something important (and lock)" />

        <Button
            android:id="@+id/unlock_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lock_button"
            android:text="Unlock important button" />

        <Button
            android:id="@+id/tree_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/unlock_button"
            android:text="Tree test" />

        <Button
            android:id="@+id/radialmenu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tree_button"
            android:text="Launch radial menu test" />

        <Button
            android:id="@+id/test_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/radialmenu_button"
            android:text="Launch TestActivity" />

        <Button
            android:id="@+id/terminal_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/test_activity_button"
            android:text="Launch terminal emulator" />

        <Button
            android:id="@+id/glyph_span_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/terminal_activity_button"
            android:text="Get glyph span selection" />

        <TextView
            android:id="@+id/glyph_span_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/glyph_span_button"
            android:paddingTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true"
            android:typeface="monospace" />
    </RelativeLayout>

</ScrollView>